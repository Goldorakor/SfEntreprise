{% extends 'base.html.twig' %}

{% block title %}Détail d'un employé{% endblock %}

{% block body %}

    <h1>Détail d'un employé</h1>  

    <h2>{{ employe }}</h2>
   
    <p>
        Ville : {% if employe.ville %} {{ employe.ville }} {% else %} Ville non renseignée {% endif %} <br>
    
        Date de naissance : {{ employe.dateNaissance | date("m-d-Y") }}<br>

        Age : {{ employe.age }} ans<br>
    
        Date d'embauche : {{ employe.dateEmbauche | date("m-d-Y") }}<br>
    
        Employé par : <a href="{{ path('show_entreprise', {'id' : employe.entreprise.id}) }}">{{ employe.entreprise.raisonSociale }}</a><br>
    </p>

{% endblock %}
